# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Email Configuration (Resend.com)
RESEND_API_KEY=your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Company Configuration
COMPANY_APPROVER_EMAIL=approver@yourdomain.com
COMPANY_NAME=Your Company Name

# Email Recipients Configuration
# Multiple recipients separated by commas (no spaces)
EMAIL_RECIPIENTS=business-dev@yourdomain.com,proposals@yourdomain.com,management@yourdomain.com
# Optional CC recipients
EMAIL_RECIPIENTS_CC=finance@yourdomain.com,legal@yourdomain.com
# Optional BCC recipients
EMAIL_RECIPIENTS_BCC=audit@yourdomain.com

# Scraping Configuration
SCRAPING_TIMEOUT=30
SCRAPING_MAX_RETRIES=3
SCRAPING_DELAY_BETWEEN_REQUESTS=2

# Scoring Configuration
SCORING_THRESHOLD=50
SCORING_AI_ENABLED=true
SCORING_AI_MODEL=gpt-3.5-turbo

# Proposal Configuration
PROPOSAL_AI_ENABLED=true
PROPOSAL_AI_MODEL=gpt-4-turbo-preview
PROPOSAL_MAX_TOKENS=4000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=tendazilla.log

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_DELAY_SECONDS=1

# Testing Configuration
USE_SAMPLE_DATA=false
TEST_MODE=false
